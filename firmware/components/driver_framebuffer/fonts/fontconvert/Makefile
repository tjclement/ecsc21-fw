all: fontconvert

CC     = gcc
CFLAGS = -Wall -Wno-implicit-function-declaration -I/usr/local/include/freetype2 -I/usr/include/freetype2 -I/usr/include
LIBS   = -lfreetype

fontconvert: fontconvert.c
	$(CC) $(CFLAGS) $< $(LIBS) -o $@
	strip $@
	
adafruit: fontconvert_adafruit.c
	$(CC) $(CFLAGS) $< $(LIBS) -o $@
	strip $@
	
clean:
	rm -f fontconvert fontheader
